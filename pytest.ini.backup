[pytest]
markers =
    smoke: Quick smoke tests for critical functionality
    regression: Full regression suite
    login: Login related tests
    cart: Shopping cart tests
    checkout: Checkout flow tests
    ui: User interface tests
    security: Security and vulnerability tests
    accessibility: Accessibility and keyboard navigation tests
    user_types: Tests for different user types (standard, problem, error, etc.)
    state: State management and session tests

testpaths = tests
python_files = test_*.py
python_classes = Test*
python_functions = test_*

addopts = 
    -v
    --tb=short
    --strict-markers
    --alluredir=allure-results
    --html=test-results/report.html
    --self-contained-html

log_cli = true
log_cli_level = INFO
log_cli_format = %(asctime)s [%(levelname)s] %(message)s
log_cli_date_format = %Y-%m-%d %H:%M:%S

